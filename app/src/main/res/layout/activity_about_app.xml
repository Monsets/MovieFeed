<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.activities_in_FragmentSettings.AboutAppActivity">

    <TextView
            android:text="2018 by Sky Sports Russia 2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:id="@+id/textView5"
            android:textSize="14sp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/copyright_button2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_copyright_black_24dp"
            android:id="@+id/copyright_button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/ic_ushanka"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>