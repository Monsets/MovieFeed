<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/colorPrimary"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="85dp" app:srcCompat="@drawable/moviefeed_mainlogo"
            android:id="@+id/MovieFeed" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/login_editText_LoginActivity" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintVertical_chainStyle="packed"/>
    <EditText
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:id="@+id/login_editText_LoginActivity"
            android:hint="Login"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/MovieFeed"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/password_editText_LoginActivity"/>
    <EditText
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:id="@+id/password_editText_LoginActivity"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_editText_LoginActivity"
            app:layout_constraintBottom_toTopOf="@+id/login_button_LoginActivity"/>
    <Button
            android:text="LOGIN"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_for_button"
            android:id="@+id/login_button_LoginActivity" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/password_editText_LoginActivity"
            app:layout_constraintBottom_toTopOf="@+id/textView" android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:text="No account yet?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button_LoginActivity" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_Button_LoginActivity"/>
    <Button
            android:text="SIGN UP"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="?attr/colorBackgroundFloating"
            android:paddingTop="8dp"
            android:id="@+id/SignUp_Button_LoginActivity"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintBottom_toTopOf="@+id/view_for_signup"
            app:layout_constraintHorizontal_bias="0.5"/>
    <View android:layout_width="75dp" android:layout_height="1dp"
          android:background="@drawable/shape_rect"
          android:id="@+id/view_for_signup"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/SignUp_Button_LoginActivity"
          app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_close_black_24dp"
            android:id="@+id/closeButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>