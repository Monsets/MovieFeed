<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.activities_in_FragmentSettings.LanguageActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rel1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <include layout="@layout/layout_toolbar"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rel2"
                android:layout_below="@+id/rel1"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <Button
                    android:text="English"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" android:id="@+id/english_button" android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp" android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp" android:background="@android:color/transparent">
            </Button>

            <ImageView
                    android:id="@+id/english_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_rect"
                    android:layout_below="@+id/english_button"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rel3"
                android:layout_below="@+id/rel2"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <Button
                    android:text="Русский"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" android:id="@+id/russian_button" android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp" android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp" android:background="@android:color/transparent">
            </Button>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/russian_check"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_rect"
                    android:layout_below="@+id/russian_button"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rel4"
                android:layout_below="@+id/rel3"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <Button
                    android:text="український"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" android:id="@+id/ukrainian_button" android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp" android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp" android:background="@android:color/transparent">
            </Button>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/ukrainian_check"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_rect"
                    android:layout_below="@+id/ukrainian_button"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_below="@+id/rel4"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <Button
                    android:text="Deutsch"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" android:id="@+id/german_button" android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp" android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp" android:background="@android:color/transparent">
            </Button>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/german_check"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_rect"
                    android:layout_below="@+id/german_button"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>