<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary">
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view4"
            android:background="@drawable/shape_rect"
            app:layout_constraintTop_toBottomOf="@+id/reviewsSources_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view3"
            android:background="@drawable/shape_rect"
            app:layout_constraintTop_toBottomOf="@+id/aboutApp_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="Reviews sources"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reviewsSources_button"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/newsSources_button"
            app:layout_constraintBottom_toTopOf="@+id/language_button" android:layout_marginTop="32dp"/>
    <Button
            android:text="News sources"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/newsSources_button"
            android:background="@color/colorPrimary"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/reviewsSources_button"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view5"
            android:background="@drawable/shape_rect"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/newsSources_button"/>
    <Button
            android:text="Language"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:id="@+id/language_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewsSources_button"
            app:layout_constraintBottom_toTopOf="@+id/aboutApp_button" android:layout_marginTop="32dp"/>
    <Button
            android:text="About app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/aboutApp_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/language_button"
            app:layout_constraintBottom_toTopOf="@+id/aboutAuthors_button" android:layout_marginTop="32dp"/>
    <Button
            android:text="About authors"
            android:layout_width="0dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:id="@+id/aboutAuthors_button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutApp_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view2"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view6"
            android:background="@drawable/shape_rect"
            app:layout_constraintTop_toBottomOf="@+id/language_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view2"
            android:background="@drawable/shape_rect"
            app:layout_constraintTop_toBottomOf="@+id/aboutAuthors_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="10dip"
            android:src="@drawable/ic_share_black_24dp"
            android:background="@color/colorPrimary"

            android:id="@+id/share_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_mail_outline_black_24dp"
            android:background="@color/colorPrimary"
            android:id="@+id/contactUs_button"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/share_button"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Contact us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>