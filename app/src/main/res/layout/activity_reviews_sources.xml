<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.activities_in_FragmentSettings.NewsSourcesActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <include layout="@layout/layout_toolbar"/>
        </RelativeLayout>

        <RelativeLayout android:layout_below="@+id/rel1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shadow"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout4" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_below="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:id="@+id/reiewsSources_recylerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>