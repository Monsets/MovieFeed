<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.develop.daniil.moviefeed_v02">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" android:launchMode="singleTask"/>
        <activity android:name=".activities.SignupActivity" android:launchMode="singleTask"/>
        <activity android:name=".activities.activities_in_FragmentSettings.NewsSourcesActivity">
        </activity>
        <activity android:name=".activities.activities_in_FragmentSettings.LanguageActivity">
        </activity>
        <activity android:name=".activities.activities_in_FragmentSettings.AboutAppActivity">
        </activity>
        <activity android:name=".activities.activities_in_FragmentSettings.AboutAuthorsActivity">
        </activity>
        <activity android:name=".activities.activities_in_FragmentSettings.ReviewsSourcesActivity">
        </activity>
    </application>

</manifest>